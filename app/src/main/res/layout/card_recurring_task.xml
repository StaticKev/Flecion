<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_task"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginVertical="5dp"
        app:cardBackgroundColor="@color/md_theme_surfaceContainerLowest"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/md_theme_surfaceDim"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="16dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="@integer/material_motion_duration_short_1"
                android:singleLine="true"
                android:text="Title"
                android:textColor="@color/md_theme_onSecondaryContainer"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btn_enable_notification"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_next_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/0000 00:00"
                android:textAlignment="textStart"
                android:textColor="@color/md_theme_tertiary"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                tools:ignore="HardcodedText,SmallSp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_enable_notification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="-6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:icon="@drawable/baseline_notifications_active_24"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.IconButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>